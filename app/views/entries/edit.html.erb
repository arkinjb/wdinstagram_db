<form action="/entries/<%= @entry.id %>" method="post">
  <input type="hidden" name="_method" value="put" />
  <p>
    <label for="name">Author:</label>
    <input id="name" name="entry[name]" type="text" value="<%= @entry.name%>">
  </p>
  <p>
    <label for="photo_url">Body:</label>
    <input id="photo_url" name="entry[photo_url]" type="text" value="<%= @entry.photo_url%>">
  </p>
  <button type="submit">Submit</button>
</form>
